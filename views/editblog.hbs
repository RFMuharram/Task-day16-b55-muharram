    />
      <link rel="shortcut icon" href="/assets/IMG/favicon.ico?v=1" type="image/ico" />
      
    <link rel="stylesheet" href="../assets/CSS/project.css" />
  </head>
  <body>
    <!-- Navbar Section Start -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary p-3">
      <div class="container-fluid">
        <a href="/" class="navbar-brand text-secondary fs-2"
          >MUHARRAM</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" aria-current="page" href="/"
                >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/#hero">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/#project">Projects</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/#testimoni">Testimonial</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/#gallery">Gallery</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/#contact">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/project">Add Project</a>
            </li>
          </ul>
         {{#if login}}
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-primary fs-4" href="/"><i class="fa-solid fa-circle-user"></i> Hi, {{user.username}}</a>
            </li>
          </ul>
          {{/if}}
        </div>
      </div>
    </nav>

    <!-- Navbar Section End -->

    <!-- Edit Project Section Start -->
    <section class="hero-project">
      <div class="container mt-1">
        <div class="row p-2">
          <div class="col-md-8 w-100">
            <div class="form-box">
              <form action="/edited" method="post"  onsubmit="return validateForm(event)">
               <input value="{{data.id}}" name="id" type="hidden"/>
                <h2
                  class="text-center text-white fs-2 fw-bold mb-2"
                  style="font-family: Teko, sans-serif"
                >
                  Edit Your Project
                </h2>
                <div class="mb-2">
                  <label
                    for="title"
                    class="form-label mb-1 text-black fw-bold fs-5"
                    >Project Name</label
                  >
                  <input type="text" class="form-control border-0" id="title" name="title" value="{{data.title}}"/>
                </div>
                <div class="mb-2">
                  <label
                    for="description"
                    class="form-label mb-1 text-black fw-bold fs-5"
                    >Description</label
                  >
                  <textarea
                    class="form-control border-0"
                    style="resize: none; height: 90px"
                    id="description"
                    rows="3"
                    name="content"
                  >{{data.content}}</textarea>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-2">
                      <label
                        for="startdate"
                        class="form-label mb-1 text-black fw-bold fs-5"
                        >Start Date</label
                      >
                      <input
                        type="date"
                        class="form-control border-0"
                        id="startdate"
                        name="startdate"
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-2">
                      <label
                        for="enddate"
                        class="form-label mb-1 text-black fw-bold fs-5"
                        >End Date</label
                      >
                      <input
                        type="date"
                        class="form-control border-0"
                        id="enddate"
                        name="enddate"
                      />
                    </div>
                  </div>
                </div>
                <div class="mb-2">
                  <label class="form-label mb-1 text-black fw-bold fs-5"
                    >Technologies</label
                  >
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-check">
                        <input
                          class="form-check-input border-0"
                          type="checkbox"
                          id="nodeJS"
                          name="node"
                        />
                        <label class="form-check-label text-black" for="nodeJS"
                          >Node JS</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input border-0"
                          type="checkbox"
                          id="reactJS"
                          name="react"
                        />
                        <label class="form-check-label text-black" for="reactJS"
                          >React JS</label
                        >
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-check">
                        <input
                          class="form-check-input border-0"
                          type="checkbox"
                          id="javaScript"
                          name="javaScript"
                        />
                        <label
                          class="form-check-label text-black"
                          for="javaScript"
                          >JavaScript</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input border-0"
                          type="checkbox"
                          id="vueJS"
                          name="vue"
                        />
                        <label class="form-check-label text-black" for="vueJS"
                          >Vue JS</label
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <div class="mb-2">
                  <label
                    for="input-image"
                    class="form-label mb-1 text-black fw-bold fs-5"
                    >Upload Image</label
                  >
                  <input
                    type="file"
                    class="form-control border-0 text-black"
                    id="input-image"
                  />
                </div>
                <button type="submit" class="btn btn-dark-green float-end">
                  Edit Post
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Edit Project Section End -->


    <!-- Footer Start -->

    <footer class="bg-custom text-white text-center mt-5">
      <div class="social">
        <a href="https://linktr.ee/rfmuharram" target="_blank"
